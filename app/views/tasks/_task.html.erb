<!-- app/views/tasks/_task.html.erb -->
<div id="<%= dom_id(task) %>">
  <div class="card mb-2 p-2 border">
    <div class="flex justify-between items-center">
      <strong><%= task.title %></strong>
      <div class="space-x-2">
        <%= link_to "Edit",
                    edit_task_path(task),
                    data: { turbo_frame: "task_modal" } %>

        <%= link_to "Delete",
                    task_path(task),
                    data: {
                      turbo_method: :delete,
                      turbo_confirm: "Delete this task?",
                      turbo_frame: "_top"   # hard break out of any frames
                    } %>
      </div>
    </div>

    <% if task.description.present? %>
      <p class="mt-1"><%= task.description %></p>
    <% end %>
  </div>
</div>
